        },
        "type": "Array"
      },
      "vulnerabilityAssessmentsStorageID": {
        "metadata": {
          "description": "The storage account ID to store assessments",
          "displayName": "The storage account ID to store assessments"
        },
        "type": "String"
      }
    },
